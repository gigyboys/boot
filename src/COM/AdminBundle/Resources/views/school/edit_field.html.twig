{% extends "COMAdminBundle::admin.html.twig" %}

{% block title %}
  edit Field
{% endblock %}

{% block body_header %}
	<div style="padding:8px; float:left">
		<span>School </span> 
		<span class="dd" style="display:inline-block;">
			<span href="#" class="dd_src" style="cursor:pointer">
				<span style="
					display:inline-block; 
					border-left: 8px solid #444;
					border-top: 5px solid transparent;
					border-bottom: 5px solid transparent;
					border-right: 0px solid transparent;
					">
				</span>
			</span>
			<div class="dd_target" style="text-align: left; margin-top: 4px; position: absolute; display: none; background: #eee; padding: 4px; border: 1px solid #aaa; border-radius: 4px;">
				<a class="link" href="test.html">menu 1</a><br />
				<a class="link" href="test.html">menu 2 </a>
			</div>
		</span> 
		<span>Fields </span> 
	</div>
	<div style="padding:8px; float:right">
		<div style="float:left">
			<span class="dd" style="display:inline-block;">
				<span href="#" class="dd_src" style="cursor:pointer">
					Autres actions
				</span>
				<div class="dd_target" style="margin-top: 4px; position: absolute; display: none; border: 1px solid rgb(170, 170, 170); border-radius: 4px;background:#eee">
					<div style="margin:5px">
						<a class="link" target="_blank" href="{{ path('com_school_viewbyid', {'id': school.id}) }}">View</a><br />
						<a class="link" href="{{ path('com_admin_school_field', {'school_id': school.id}) }}">Fields</a><br />
						<a class="link" href="{{ path('com_admin_school_administrator', {'school_id': school.id}) }}">Admin</a><br />
						<a class="link" href="">evaluations</a>
					</div>
				</div>
			</span> 
		</div>
	</div>
{% endblock %}

{% block content_body %}
	<div style="">
		<div style="float:left; height: 86px;margin:5px">
			{# twig extension #}
			{% set logo=schoolLogo(school) %}
			{% if logo != "default.jpeg" %}
				{% set pathtologo='uploads/images/school/logo/'~logo %}
			{% else %}
				{% set pathtologo='default/images/school/logo/'~logo %}
			{% endif %}
			<img id="school_logo" style="width: 80px; height: 80px" src="{{ pathtologo | imagine_filter('80x80') }}" alt="img sl" />
		</div>
		<div style="margin-left: 90px;">
			<div>
				<table>
					<tr>
						<td>Name</td>
						<td>:</td>
						<td style="padding:5px"><span id="sl_view_name">{{ school.name }}</span></td>
					</tr>
					<tr>
						<td>ShortName</td>
						<td>:</td>
						<td style="padding:5px"><span id="sl_view_shortname">{{ school.shortName }}</span></td>
					</tr>
					<tr>
						<td>Slug</td>
						<td>:</td>
						<td style="padding:5px"><span id="sl_view_slug">{{ school.slug }}</span></td>
					</tr>
				</table>
			</div>
		</div>
		<div style="clear:both"></div>
	</div>
	
	<div style="background:#ddd; padding: 5px; margin:5px; border:1px solid #bbb">
		Edit field
	</div>
	
	<div style="">
		<div style="">
			<div style="padding:5px">
				<div class="bloc_editable">
					<div class="bloc_view">
						<table>
							<tr>
								<td>DefaultName</td>
								<td>:</td>
								<td style="padding:5px"><span id="field_view_defaultname">{{ field.defaultName }}</span></td>
							</tr>
							<tr>
								<td>Slug</td>
								<td>:</td>
								<td style="padding:5px"><span id="field_view_slug">{{ field.slug }}</span></td>
							</tr>
						</table>
					</div>
					<div class="bloc_edit" style="display:none">
						<table>
							<tr>
								<td>DefaultName</td>
								<td>:</td>
								<td style="padding:5px"><input type="text" id="field_input_defaultname" class="default_input" value="{{ field.defaultName }}" /></td>
							</tr>
							<tr>
								<td>Slug</td>
								<td>:</td>
								<td style="padding:5px"><input type="text" id="field_input_slug" class="default_input" value="{{ field.slug }}" /></td>
							</tr>
						</table>
					</div>
					<div class="separator"></div>
					<div class="bloc_action" style="margin:5px">
						<span class="btn_edit standar_button">Modifier</span> 
						<span class="btn_save standar_button" id="btn_save_field_common" data-target="{{ path('com_admin_school_field_edit_common', {'id': field.id}) }}" style="display:none">Enregistrer</span>
						<span class="btn_reset standar_button" style="display:none">Annuler</span> 
						<span class="btn_loading" style="display:none;padding:5px;border:1px solid transparent;margin: 0px 5px 0px 0px;"><img src="{{ asset('assets/image/load.gif') }}" />Chargement...</span> 
					</div>
				</div>
			</div>
			<div style="clear:both"></div>
		</div>
		
		{# twig extension #}
		{% set locales = getLocales() %}
		
		<div id="a_content_tab">
			<div class="a_content_tab_header">
				<div class="a_content_tab_header_content">
					{% for locale in locales %}
						<div class="a_content_tab_header_item{% if locale.locale == 'fr' %} selected{% endif %}" id="tab_{{ locale.locale }}">
							<div class="a_content_tab_header_item_text">
								{{ locale.label | trans }}
							</div>
						</div>
					{% endfor %}
				</div>
				<div class="a_content_tab_header_sep">
					<div class="a_content_tab_header_sep_slide">
					</div>
				</div>
			</div>
			<div class="a_content_tab_content">
				{% for locale in locales %}
					{# twig extension #}
					{% set fieldTranslate = getFieldTranslate(field, locale) %}
					<div class="a_content_tab_content_item{% if locale.locale == 'fr' %} selected{% else %} not_selected{% endif %}" id="content_tab_{{ locale.locale }}" style="">
						<div class="bloc_editable">
							<div class="bloc_view">
								<div>
									<div style="margin: 5px 0;">
										name {{ locale.locale }}:
									</div>
									<div id="" class="fieldt_view_name" style="padding:5px;background:#fff; border-radius:4px;border:1px solid #eee">
										{% if fieldTranslate is not null %}
											{{ fieldTranslate.name }}
										{% else %}
											NAN
										{% endif %}
									</div>
								</div>
								
								<div style="">
									<div style="margin: 5px 0;">
										Description :
									</div>
									<div id="" class="fieldt_view_description" style="padding:5px;background:#fff; border-radius:4px;border:1px solid #eee">
										{% if fieldTranslate is not null %}
											{{ fieldTranslate.description | raw }}
										{% else %}
											NAN
										{% endif %}
									</div>
								</div>
							</div>
							<div class="bloc_edit" style="display:none">
								<div>
									<div style="margin: 5px 0;">
										name :
									</div>
									<div>
										<input type="text" id="" class="fieldt_input_name default_input" value="{% if fieldTranslate is not null %}{{ fieldTranslate.name }}{% else %}{% endif %}" />
									</div>
								</div>
								
								<div style="">
									<div style="margin: 5px 0;">
										Description :
									</div>
									<div>
										<textarea id="" class="fieldt_input_description default_textarea tinymce" data-theme="advanced">{% if fieldTranslate is not null %}{{ fieldTranslate.description | raw }}{% else %}{% endif %}</textarea>
									</div>
								</div>
							</div>
							<div class="separator"></div>
							<div class="bloc_action" style="margin:5px">
								<span class="btn_edit standar_button">Modifier</span> 
								<span class="btn_save_field_trans btn_save standar_button" id="" data-target="{{ path('com_admin_school_field_edit_translate', {'id': field.id, 'locale':locale.locale}) }}" style="display:none">Enregistrer</span>
								<span class="btn_reset standar_button" style="display:none">Annuler</span> 
								<span class="btn_loading" style="display:none;padding:5px;border:1px solid transparent;margin: 0px 5px 0px 0px;">Chargement...</span> 
							</div>
						</div>
					</div>
				{% endfor %}
			</div>
		</div>
	</div>
{% endblock %}
