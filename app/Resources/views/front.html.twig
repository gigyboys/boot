<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8">
		<meta name="viewport" content="width=device-width, initial-scale=1">
		
        <title>{% block title %}Welcome!{% endblock %}</title>
		
		{% block icon %}
            <link rel="icon" type="image/png" href="{{ asset('assets/image/oio.svg') }}" />
		{% endblock %}
		
		{% block stylesheets %}
			{% stylesheets
				'assets/css/common.css'
				'assets/css/header.css'
				'assets/css/style.css'
				'assets/css/container.css'
				'assets/css/sl.css'
				'assets/css/ur.css'
				'assets/css/bg.css'
				'assets/css/fm.css'
				'assets/css/footer.css'
				'assets/css/button.css'
				'assets/css/popup.css'
			%}
				<link rel="stylesheet" href="{{ asset_url }}" type="text/css" />
			{% endstylesheets %}
		{% endblock %}
		{% block styledirect %}
			<style type="text/css">
				#search{background: rgba(255, 255, 255, 1) url('{{ asset('assets/image/cover.jpg') }}') no-repeat scroll center center / cover ;}
			</style>
		{% endblock %}
		
		{% block javascripts %}
			{% javascripts 
				'assets/js/jquery.js'
				'assets/js/common.js'
				'assets/js/script.js'
				'assets/js/header.js'
				'assets/js/button.js'
				'assets/js/popup.js'
				'assets/js/sl.js'
				'assets/js/ur.js'
				'assets/js/bg.js'
				'assets/js/bg_manage.js'
				'assets/js/at.js'
				'assets/js/fm.js'
			%}
				{#<script type="text/javascript" src="http://maps.google.com/maps/api/js?key=AIzaSyBGWXblVkezi69dBRUoKcsjOf3g7I4XwM0&sensor=true"></script>#}
				<script type="text/javascript" src="{{ asset_url }}"></script>
			{% endjavascripts %}
		{% endblock %}
		{#'assets/js/gmaps.js'#}
		<script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyBGWXblVkezi69dBRUoKcsjOf3g7I4XwM0&sensor=false"></script>
		{% block jsgmap %}
		{% endblock %}
    </head>
    <body>
		<header>
			{#{{ include("::include/front/header/banner.html.twig") }}#}
			{{ include("::include/front/header/navigation.html.twig") }} 
			{{ include("::include/front/header/search.html.twig") }} 
		</header>
		
		<div id="container">
        {% block body %}
			<div>
				"Ny fianarana no lova tsara indrindra."
			</div>
		{% endblock %}
		</div>
		<footer>
			{{ include("::include/front/footer/navigation.html.twig") }}
			{#{{ include("::include/front/footer/newsletter.html.twig") }} #}
			{{ include("::include/front/footer/copyright.html.twig") }} 
		</footer>
		{{ tinymce_init() }}
    </body>
</html>
