<div style="margin-bottom:10px">
	<div style="background:#ccc; height:1px; width:100%; margin:12px 0"></div>
	<div style="margin-bottom:5px">
	By : 
	{# twig extension #}
	{% set userInfo = getLinkUserInfo(evaluation.user, evaluation.user.name) %}
	{{ userInfo | raw }}
	 on {{ evaluation.date | date('Y-m-d H:i:s') }}
	</div>
	<div style="width:50px;float:left">
		{% set avatar=userAvatar(evaluation.user) %}
		{% if avatar != "default.jpeg" %}
			{% set pathtoavatar='uploads/images/user/avatar/'~avatar %}
		{% else %}
			{% set pathtoavatar='default/images/user/avatar/'~avatar %}
		{% endif %}
		<span style="display:block;float:left;width:32px"><img id="avatar_banner" style="width:50px; height: 50px" src="{{ pathtoavatar | imagine_filter('50x50') }}" alt="{{ evaluation.user.username }}" /></span>
	</div>
	<div style="margin-left:60px">
		<div style="height:26px">
			<div style="float:left; padding-top:2px">Mark : </div>
			{% set mark = evaluation.mark/20 %}
			{% for i in 1..5 %}
				{% if i <= mark %}
					<div style="float:left; padding:4px"><div class="" data-value="20" style="border-radius:50%; background:#2a2; width:14px; height:14px; border:1px solid #2a2"></div></div>
				{% else %}
					<div style="float:left; padding:4px"><div class="" data-value="100" style="border-radius:50%; background:#fff; width:14px; height:14px; border:1px solid #2a2"></div></div>
				{% endif %}
			{% endfor %}			
		</div>
		<div style="margin-bottom:5px">
			{{ evaluation.comment | nl2br  }}
		</div>
	</div>
	<div class="both"></div>
</div>