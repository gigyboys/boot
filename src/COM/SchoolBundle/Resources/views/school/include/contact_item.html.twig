<div class="contact_item mg_b10">
	<div class="sp mg_v5"></div>
	<div class="">
		<div class="mg_b5">
			<div style="">
				{% if schoolContact.address | trim != "" %}
					<div>address : {{ schoolContact.address }}</div>
				{% endif %}
				{% if schoolContact.email | trim != "" %}
					<div>email : {{ schoolContact.email }}</div>
				{% endif %}
				{% if schoolContact.phone | trim != "" %}
					<div>phone : {{ schoolContact.phone }}</div>
				{% endif %}
				{% if schoolContact.website | trim != "" %}
					<div>website : <a target="_blank" href="http://{{ schoolContact.website }}">{{ schoolContact.website }}</a></div>
				{% endif %}
				
				{#
				{% if schoolContact.latitude | trim != "" and schoolContact.longitude | trim != "" %}
					<div>longitude : {{ schoolContact.longitude }} latitude : {{ schoolContact.latitude }}</div>
				{% endif %}
				#}
				
				{# twig extension #}
				{% set schoolContactTranslate = getSchoolContactTranslate(schoolContact, locale) %}
				
				{% if schoolContactTranslate %}
					{% if schoolContactTranslate.description | trim != "" %}
						<div class="pd_5 mg_v5" style="border:1px solid #eee; background:#d8e8fe; border-radius:3px">{{ schoolContactTranslate.description }}</div>
					{% endif %}
				{% endif %}
			</div>
			{% if schoolContact.latitude | trim != "" and schoolContact.longitude | trim != "" %}
				<div class="btn_show_map standar_button" data-target="{{ path('com_school_get_map_coordonnees_contact', {'slug': school.slug, 'contact_id': schoolContact.id}) }}" style="cursor:pointer; margin: 5px 0" >
					<img src="{{ asset('assets/image/location_icon.png') }}" style="width:12px; height:12px;" /> 
					{{ "Show on map" | trans }}
				</div>
			{% endif %}
				
		</div>
	</div>
</div>