						<div class="link_wrap">
							<a class="link" href="{{ path('com_blog_home') }}">
								<span>{{ 'blog' | trans }}</span>
							</a>
						</div>
						<div class="link_wrap">
							<a class="link" href="{{ path('com_advert_home') }}">
