{% extends "COMAdminBundle::admin.html.twig" %}

{% block title %}
	adverts list
{% endblock %}

{% block body_header %}
	<div class="bc">
		<span class="bc1"><a href="{{ path('com_admin_advert') }}"><img src="{{ asset('assets/image/at_icon.png') }}" style="width:14px; height:auto" /> <span>{{ 'Advert' | trans }}</span></a></span> 
	</div>
	<div style="padding:8px;float:right">
		<span><a href="{{ path('com_admin_advert_add') }}"><img src="{{ asset('assets/image/add_icon.png') }}" /> <span>{{ 'New advert' | trans }}</span></a></td></span> 
	</div>
{% endblock %}

{% block content_body %}
	<div style="background:#ddd; padding: 5px; margin:5px; border:1px solid #bbb">
		adverts list
	</div>
	
	<div class="a_datatable">
		<div class="a_datatable_head">
			<div class="a_datatable_head_left">
				<span style="display:inline-block; margin-top:5px; margin-left:6px"> Search : <input type="text" class="default_input a_list_search_input" data-target-id="list_adverts" /></span>
			</div>
			<div class="a_datatable_head_right">
				{#right#}
			</div>
		</div>
		
		
		<div class="a_datatable_body">
			<table class="a_table" id="list_adverts">
				<tr class="a_table_head">
					<th class="a_table_cell_id" style="width: 50px; text-align:center">id</th>
					<th>title</th>
					<th>author</th>
					<th>Published</th>
					<th class="a_table_cell_action">action</th>
				</tr>
				{% for advert in adverts %}
				<tr class="a_table_line" data-text="{{ advert.defaultTitle }}" style="display:table-row">
					<td class="a_table_cell_id" style="width: 50px; text-align:center">{{ advert.id }}</td>
					<td>
											
						{# twig extension #}
						{% set illustration=advertIllustration(advert) %}
						{% if illustration != "default.jpeg" %}
							{% set path='uploads/images/advert/illustration/'~illustration %}
						{% else %}
							{% set path='default/images/advert/illustration/'~illustration %}
						{% endif %}
						<a href="{{ path('com_admin_advert_edit', {'id': advert.id}) }}" style="display:block;">
							<span style="display:block;float:left;width:32px"><img id="advert_illustration" style="width: 32px; height: 32px;display:block" src="{{ path | imagine_filter('32x32') }}" alt="img advert" /></span>
							<span style="display:block;margin-left:36px;padding-top:6px">{{ advert.defaultTitle }}</span>
							<span class="both"></span>
						</a>
						
					</td>
					<td>{{ advert.user.name }}</td>
					<td>
						{% if advert.published %}
							<span style="display:inline-block;width:16px;height:16px;border-radius:50% 50%; background:#0c0"></span>
						{% else %}
							<span style="display:inline-block;width:16px;height:16px;border-radius:50% 50%; background:#c00"></span>
						{% endif %}
					</td>
					<td class="a_table_cell_action">action</td>
				</tr>
				{% endfor %}
			</table>
		</div>
		
		<div class="a_datatable_foot">
			<div class="a_datatable_foot_left">
				<span style="display:inline-block; margin-top:6px; margin-left:6px" class="result_state">{{ adverts | length }} resultat(s)</span>
			</div>
			<div class="a_datatable_foot_right">
				{#
				<span>right</span> 
				<span>1</span> 
				<span>2</span> 
				<span>3</span> 
				#}
			</div>
		</div>
	</div>
{% endblock %}

{% block body_footer %}
	<span style="display:inline-block; margin-top:6px; margin-left:6px">{{ adverts | length }} adverts</span> | 
	<span style="display:inline-block; margin-top:6px; margin-left:6px">{{ publishedAdverts | length }} published adverts</span> | 
	<span style="display:inline-block; margin-top:6px; margin-left:6px">{{ notPublishedAdverts | length }} not published adverts</span> 
{% endblock %}

