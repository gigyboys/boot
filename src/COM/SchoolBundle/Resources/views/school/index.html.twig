{% extends "COMSchoolBundle::school.html.twig" %}

{% block title %}
  Schools
{% endblock %}


{% block school_body %}
	<div class="cr">
		<div class="ct">
			<div id="sl_list" style="overflow:auto">
				<div class="sll" style="background:transparent">
					<div class="sll_ct" style="">
						{% for school in schools %}
						 
							{# twig extension #}
							{% set logo=schoolLogo(school) %}
							{% if logo != "default.jpeg" %}
								{% set pathtologo='uploads/images/school/logo/'~logo %}
							{% else %}
								{% set pathtologo='default/images/school/logo/'~logo %}
							{% endif %}
							
							<div class="sl_item" style="">
								<div class="sl_logo">
									<img style="" src="{{ pathtologo | imagine_filter('140x140') }}" alt="img sl" />
								</div>
								<div class="sl_label">
									<a href="{{ path('com_school_view', {'slug': school.slug}) }}">
										{{ school.shortName }}<br />
										{{ school.name }}
									</a>
								</div>
								<div class="sl_action">
									Etat
								</div>
							</div>
						{% endfor %}
						<div style="clear:both"></div>
					</div>
				</div>
				<div class="slr" style="">
					<div style="min-height:500px; margin:10px; width:auto; background:#eee"></div>
				</div>
				<div style="clear:both"></div>
			</div>
		</div>
	</div>
{% endblock %}
