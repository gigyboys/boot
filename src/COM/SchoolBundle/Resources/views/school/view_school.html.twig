{% extends "COMSchoolBundle::school.html.twig" %}

{% block title %}
  {{ school.name }}
{% endblock %}


{% block school_body %}
	<div id="sl_gl" class="cr">
		<div class="ct">
			<div style="margin:0 10px">
				<div style="float:left;">
					 
					{# twig extension #}
					{% set logo=schoolLogo(school) %}
					{% if logo != "default.jpeg" %}
						{% set pathtologo='uploads/images/school/logo/'~logo %}
					{% else %}
						{% set pathtologo='default/images/school/logo/'~logo %}
					{% endif %}
					
					<img style="width: 100px; height: 100px; border:5px solid #ccc; border-radius:10px" src="{{ pathtologo | imagine_filter('100x100') }}" alt="img sl" />
				</div>
				<div style="margin-left: 120px; min-height:110px">
					<div id="" style="color:#333; font-size:18px">
						{{ school.name }} ({{ school.shortName }}) ({{ school.views | length }} vues)
					</div>
					<div id="">
						{{ school.shortDescription }}
					</div>
					<div style="margin-top:10px">
						<span>S'abonner</span> {% if is_granted("IS_AUTHENTICATED_REMEMBERED") and is_granted('ROLE_ADMIN') %}<a href="{{ path('com_admin_school_edit', {'id': school.id}) }}" target="_blank"><span>Administrer</span></a>{% endif %}
					</div>
				</div>
				<div style="clear:both"></div>
			</div>
		</div>
	</div>
	<div id="sl_dl">
		<div id="sl_onglet_head" style="">
			<div class="cr">
				<div class="ct">
					<div style="margin:0 10px">
						<span class="tab_sl_item selected" id="tab_sl_about" style="">A propos</span>  
						<span class="tab_sl_item" id="tab_sl_new" style="">Actualités</span>  
						<span class="tab_sl_item" id="tab_sl_advert" style="">Annonces</span>  
						<span class="tab_sl_item" id="tab_sl_evaluation" style="">Evaluations</span>
					</div>
				</div>
			</div>
		</div>
		<div class="content_tab_sl_item" id="content_tab_sl_about" style = "">
			<div class="cr">
				<div class="ct">
					<div style="padding:5px; min-height:100px">
					{{ schoolTranslate.description | raw}}
					</div>
				</div>
			</div>
		</div>
		<div class="content_tab_sl_item" id="content_tab_sl_new" style = "display:none">
			<div class="cr">
				<div class="ct">
					<!--<div style="border-bottom: 1px solid #999; padding:5px">
						Actualités
					</div>-->
					<div style="padding:5px; min-height:100px">
						{% if postSchools|length == 0 %}
							Aucune actualité à afficher
						{% endif %}
						{% for postSchool in postSchools %}
							<div>
								<a href="{{ path('com_blog_view', {'slug': postSchool.post.slug}) }}">{{ postSchool.post.title }}</a>
							</div>
						{% endfor %}
					</div>
				</div>
			</div>
		</div>
		<div class="content_tab_sl_item" id="content_tab_sl_advert" style = "display:none">
			<div class="cr">
				<div class="ct">
					<!--<div style="border-bottom: 1px solid #999; padding:5px">
						Annonces
					</div>-->
					<div style="padding:5px; min-height:100px">
						{% if advertSchools|length == 0 %}
							Aucune annonce à afficher
						{% endif %}
						{% for advertSchool in advertSchools %}
							<div>
								<a href="{{ path('com_advert_view', {'slug': advertSchool.advert.slug}) }}">{{ advertSchool.advert.defaultTitle }}</a>
							</div>
						{% endfor %}
					</div>
				</div>
			</div>
		</div>
		<div class="content_tab_sl_item" id="content_tab_sl_evaluation" style = "display:none">
			<div class="cr">
				<div class="ct">
					{{ include("COMSchoolBundle:school:include/evaluation.html.twig") }}
				</div>
			</div>
		</div>
	</div>
{% endblock %}
