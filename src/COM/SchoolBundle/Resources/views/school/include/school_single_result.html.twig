<div style="">
	{# twig extension #}
	{% set logo=schoolLogo(school) %}
	{% if logo != "default.jpeg" %}
		{% set pathtologo='uploads/images/school/logo/'~logo %}
	{% else %}
		{% set pathtologo='default/images/school/logo/'~logo %}
	{% endif %}
	<a title="{{ school.name }}" href="{{ path('com_school_view', {'slug': school.slug}) }}" style="display:block">
		<span style="display:inline-block; vertical-align: middle; ">
			<img style="" src="{{ pathtologo | imagine_filter('22x22') }}" alt="img sl" />
		</span>
		<span style="display:inline-block;vertical-align: middle; ">	
			<span>{{ school.name }}</span> 
			{% if school.shortName | trim != "" %}
				<span>({{ school.shortName }})</span>
			{% endif %}
		</span>
	</a>
</div>