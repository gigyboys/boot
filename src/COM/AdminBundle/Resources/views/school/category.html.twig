{% extends "COMAdminBundle::admin.html.twig" %}

{% block title %}
  categories list
{% endblock %}

{% block body_header %}
	<div class="bc">
		<span class="bc1"><a href="{{ path('com_admin_school') }}"><img src="{{ asset('assets/image/sl_icon.png') }}" style="width:14px; height:auto" /> <span>{{ 'School' | trans }}</span></a> </span> 
		<span class="dd">
			<span href="#" class="dd_src">
				<span class="bcdd"></span>
			</span>
			<div class="dd_target">
				<span class="bc2"><a class="link" href="{{ path('com_admin_school_add') }}">add School</a></span>
			</div>
		</span> 
		<span class="bc1"><a href="{{ path('com_admin_school_category') }}">{{ 'Categories' | trans }}</a></span>
	</div>
	
	<div style="padding:8px;float:right">
		<span><a href="{{ path('com_admin_school_category_add') }}">{{ 'New Category' | trans }}</a></td></span> 
	</div>
{% endblock %}

{% block content_body %}
	<div style="background:#ddd; padding: 5px; margin:5px; border:1px solid #bbb">
		<span><img src="{{ asset('assets/image/list_icon.png') }}" style="width:12px; height:auto" /> categories list</span>
	</div>
	
	<div class="a_datatable">
		<div class="a_datatable_head">
			<div class="a_datatable_head_left">
				<span style="display:inline-block; margin-top:5px; margin-left:6px"> Search : <input type="text" class="default_input a_list_search_input" data-target-id="list_categories_sl" /></span>
			</div>
			<div class="a_datatable_head_right">
				{#right#}
			</div>
		</div>
		
		<div class="a_datatable_body">
			<table class="a_table" id="list_categories_sl">
				<tr class="a_table_head">
					<th class="a_table_cell_id" style="width: 50px; text-align:center">id</th>
					<th>name</th>
					<th>slug</th>
					<th class="a_table_cell_action">action</th>
				</tr>
				{% for category in categories %}
					<tr class="a_table_line" data-text="{{ category.defaultName }}" style="display:table-row">
						<td class="a_table_cell_id" style="width: 50px; text-align:center">{{ category.id }}</td>
						<td><a href="{{ path('com_admin_school_category_edit', {'id': category.id}) }}">{{ category.defaultName }}</a></td>
						<td>{{ category.slug }}</td>
						<td class="a_table_cell_action">action</td>
					</tr>
				{% endfor %}
			</table>
		</div>
		
		<div class="a_datatable_foot">
			<div class="a_datatable_foot_left">
				<span style="display:inline-block; margin-top:6px; margin-left:6px" class="result_state">{{ categories | length }} resultat(s)</span>
			</div>
			<div class="a_datatable_foot_right">
				{#
				<span>right</span> 
				<span>1</span> 
				<span>2</span> 
				<span>3</span> 
				#}
			</div>
		</div>
	</div>
{% endblock %}

{% block body_footer %}
	<span style="display:inline-block; margin-top:6px; margin-left:6px">{{ categories | length }} categories</span>
{% endblock %}

