{% extends "COMUserBundle::user.html.twig" %}

{% block title %}
	Connexion
{% endblock %}


{% block user_body %}
	<div class="cr">
		<div class="ct">
			<div class="mg_h10">
				<div style="border: 1px solid #ddd; background:#f8f8f8; padding: 5px; margin:10px 0">
