{% set nbAllSchools = allSchools | length %}
{% set nbPagesFormat = ((nbAllSchools / 12) - 0.5) | number_format  %}

{% if (nbAllSchools / 12) == nbPagesFormat%}
	{% set nbPages = nbPagesFormat %}
{% else %}
	{% set nbPages = nbPagesFormat + 1 %}
{% endif %}

{% for page in 1..nbPages %}
	{% if currentpage == page%}
		<a class="sll_pagination_item active" title="page {{ page }}" href="{{ path('com_school_home', {'page': page }) }}">
			{{ page }}  
		</a>
	{% else %}
		<a class="sll_pagination_item" title="page {{ page }}" href="{{ path('com_school_home', {'page': page }) }}">
			{{ page }}  
		</a>
	{% endif %}
{% endfor %}