{% extends "COMForumBundle::forum.html.twig" %}

{% block title %}
  Subject {{ subject.title }}
{% endblock %}


{% block forum_body %}
	<div class="cr">
		<div class="ct">
			<div class="mg_10">
				<span style="font-weight:bold">Subject {{ subject.title }}</span><br />
				By 
				{# twig extension #}
				{% set userInfo = getLinkUserInfo(subject.user, subject.user.name) %}
				{{ userInfo | raw }}
			</div>
			<div class="sp mg_v10"></div>
			<div>
				<div id="fm_list_msg">
					{% for message in messages %}
						{{ include("COMForumBundle:forum:include/message_item.html.twig") }}
					{% endfor %}
				</div>
				<div class="both"></div>
				{% if is_granted("IS_AUTHENTICATED_REMEMBERED")%}
					<div class="mg_10">
						<form action="" name="" method="post" id="">
							<div style="margin-bottom:5px">
							{{ app.user.name }} :
							</div>
							<div style="width:60px;float:left">
								{% set avatar=userAvatar(app.user) %}
								{% if avatar != "default.jpeg" %}
									{% set pathtoavatar='uploads/images/user/avatar/'~avatar %}
								{% else %}
									{% set pathtoavatar='default/images/user/avatar/'~avatar %}
								{% endif %}
								<span style="display:block;float:left;"><img id="avatar_banner" style="width:60px; height: 60px" src="{{ pathtoavatar | imagine_filter('60x60') }}" alt="{{ app.user.username }}" /></span>
							</div>
							<div style="margin-left:70px">
								<textarea class="default_textarea" id="fm_message" style="min-height:120px"></textarea>
								<div id="fm_add_message_action" class="mg_t10">
									<span class="btn_save standar_button" id="btn_fm_new_msg" data-target="{{ path('com_forum_new_message', {'subject_id': subject.id}) }}">R&eacute;pondre</span>
									<span class="btn_loading" style="display:none;padding:5px;border:1px solid transparent;margin: 0px 5px 0px 0px;">Chargement...</span>
								</div>
							</div>
							<div class="both"></div>
						</form>
					</div>
				{% else %}
					<div style="margin: 10px 0">
						<a class="link" href="{{ path('com_user_login') }}">Connectez-vous pour pouvoir ecrire votre message</a>
					</div>
				{% endif %}
			</div>
		</div>
	</div>
{% endblock %}
